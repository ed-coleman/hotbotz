<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sofia+Sans+Condensed:wght@1;300;600;800&family=Sofia+Sans+Semi+Condensed:wght@200&display=swap" rel="stylesheet">
  </head>
  <body>
    <section id="top">
    </section>
    <section id="middle">
      <div id="loginWindow" class="container-sm">
        <form id="loginForm" action="/auth/login" method="POST" class="container-sm">
          <p>LOGIN <span style="font-size:15px;">Not registered? <a href="/auth/signup">Signup now</a></span></p>
          <label>Username:
          <input id="userField" name="username"type="text" />
          </label>
          <label>Password:
          <input  id="passwordField" name="password"type="password" height="20" />
          </label>
          <button id="submitLogin" type="submit">Login</button>
        </form>
       
      </div>
      <% if (typeof errorMessage !== 'undefined') { %>
        <p id="errorMessage" style="color: red"><%= errorMessage %></p>
        <% } %>
    </section>
    <section id="bottom"></section>
  </body>

