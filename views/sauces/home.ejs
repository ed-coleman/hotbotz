<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Sofia+Sans+Condensed:wght@1;300;600;800&family=Sofia+Sans+Semi+Condensed:wght@200&display=swap" rel="stylesheet">
</head>

<div class="container text-center">

        <div id="sauceDisplay" style="display:flex;flex-wrap: wrap;">
        
            <% topSauces.forEach(sauce => { %>
           
                    <div class="card" style="width: 10rem;margin:10px;">
                       <img src="<%= sauce.image %>" class="card-img-top" alt="<%= sauce.name %>" width="30">
                       <div class="card-body">
                         <h5 class="card-title">
                            <% const sauceName = sauce.name%>
                            <%= sauceName.toLowerCase()
                            .split(' ')
                            .map((s) => s.charAt(0).toUpperCase() + s.substring(1))
                            .join(' ')%>
                        </h5>
                         <a href="<%= sauce._id %>" class="btn btn-secondary">View Sauce</a>
                       </div>
                     </div>
                    
                     
                   <% }) %>
           
           </div>
          


      <div id="sauceDisplay" class="col">
          
<div id="headerWrapper">
            <h2>Recently added</h2>
          </div>

            <div style="display:flex;flex-wrap: wrap;">
                <% mostRecentSauce.forEach(sauce => { %>

                <div  class="card" style="width: 10rem;margin:10px;">
                    <img src="<%= sauce.image %>" class="card-img-top" alt="<%= sauce.name %>" width="30">
                    <div class="card-body">
                    <h5 class="card-title">
                      <% const sauceName = sauce.name%>
                      <%= sauceName.toLowerCase()
                      .split(' ')
                      .map((s) => s.charAt(0).toUpperCase() + s.substring(1))
                      .join(' ')%>
                    </h5>
                    <a href="<%= sauce._id %>" class="btn btn-secondary">View Sauce</a>
                    </div>
                </div>

                <% }) %>
            </div>
          </div>



      
  
  </div>

       
        
      