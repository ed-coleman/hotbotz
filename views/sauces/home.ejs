
<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Sofia+Sans+Condensed:wght@1;300;600;800&family=Sofia+Sans+Semi+Condensed:wght@200&display=swap" rel="stylesheet">
</head>


<div id="sideMenuButton">
<input  type="image" src="/images/hamburger.png" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling"></button>
</div>
<div  class="offcanvas offcanvas-end" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
  <div id="sideMenu" class="offcanvas-header">


    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div id="sideMenuContent" class="offcanvas-body">
    Filter Sauces
    <a href="#recentSauce">Recently Added</a>
    <a href="#hottestSauce">Hottest</a>
    <a href="#bestRatedSauce">Highest Rated</a>
    <a href="#mostReviewedSauce">Most Reviewed</a>
  </div>
</div>
  





<div class="container text-center">

        <div id="sauceDisplay" style="display:flex;flex-wrap: wrap;">
        
            <% topSauces.forEach(sauce => { %>
           
                    <div id='cardBody' class="card" style="width: 10rem;margin:10px;">
                      <a  href="<%= sauce._id %>"><img id="sauceImage"src="<%= sauce.image %>" class="card-img-top" alt="<%= sauce.name %>" width="30"></a>
                       <div id="cardBody" class="card-body">
                         <h5 class="card-title">
                            <% const sauceName = sauce.name%>
                            <%= sauceName.toLowerCase()
                            .split(' ')
                            .map((s) => s.charAt(0).toUpperCase() + s.substring(1))
                            .join(' ')%>
                        </h5>
                       </div>
                     </div>
                    
                     
                   <% }) %>
           
           </div>
          


      <div id="sauceDisplay" class="col">
          
<div id="headerWrapper">
  <a id="recentSauce"> <h2>Recently added</h2></a>
          </div>

          <div style="display:flex;flex-wrap: wrap;"> 
                <% mostRecentSauce.forEach(sauce => { %>

              <div id="cardBodyHottest" class="card" style="width: 10rem;margin:10px;">
                  
                  <a id="sauceImage" href="<%= sauce._id %>"><img id="sauceImage"  src="<%= sauce.image %>" class="card-img-top" alt="<%= sauce.name %>" width="30"></a>
                    <div id="cardBody" class="card-body">
                    <h5  class="card-title">
                      <% const sauceName = sauce.name%>
                      <%= sauceName.toLowerCase()
                      .split(' ')
                      .map((s) => s.charAt(0).toUpperCase() + s.substring(1))
                      .join(' ')%>
                      <br/>

<% 
let createdAtDate = sauce.createdAt
let createdAt = createdAtDate
let day = createdAt.getDate()
let month = createdAt.getMonth()+1 
let year = createdAt.getYear()-100
let createdAtDateReformatted = day + "/" + month + "/" + year;
%>
                      <span id="sauceDate" style="color:red;font-weight:bold"><%= createdAtDateReformatted %></span>
                    
                    </h5>
                    </div>
                </div>

                <% }) %>
            </div>
          </div>





          <div id="sauceDisplay" class="col">
          
            <div id="headerWrapper">
              <a id="hottestSauce"><h2>Hottest</h2></a>
                      </div>
            
                        <div style="display:flex;flex-wrap: wrap;">
                            <% hottestSauces.forEach(sauce => { %>
            
                            <div id="sauceCard" class="card" style="width: 10rem;margin:10px;">
                              
                              <a id="sauceImage" href="<%= sauce._id %>"><img id="sauceImage"  src="<%= sauce.image %>" class="card-img-top" alt="<%= sauce.name %>" width="30"></a>
                                <div id="cardBodyHottest" class="card-body">
                                <h5  class="card-title">
                                  <% const sauceName = sauce.name%>
                                  <%= sauceName.toLowerCase()
                                  .split(' ')
                                  .map((s) => s.charAt(0).toUpperCase() + s.substring(1))
                                  .join(' ')%>
                                  <br/>
                                  <span style="color:red;font-weight:bold"><%= sauce.scoville %> SHU</span>
                                  
                                </h5>
                   
                                  
                                </div>
                            </div>
            
                            <% }) %>
                        </div>
          </div>





          <div id="sauceDisplay" class="col">
          
            <div id="headerWrapper">
              <a id="bestRatedSauce"><h2>Highest rated</h2></a>
                      </div>
            
                      <h3>Coming SOON</h3>
          </div>



          
          <div id="sauceDisplay" class="col">
          
            <a id="mostReviewedSauce"><div id="headerWrapper"></a>
                        <h2>Most reviewed</h2>
                      </div>
            
                      <h3>Coming SOON</h3>
          </div>



      
  
  </div>

       
        
      