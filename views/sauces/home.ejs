<div class="container text-center">
    <div class="row align-items-start">
      <div class="col" style="width:90%">

        <h2>Browse hot sauces</h2>

        <div style="display:flex;flex-wrap: wrap;">
            <% topSauces.forEach(sauce => { %>
           
                    <div class="card" style="width: 10rem;margin:10px;">
                       <img src="<%= sauce.image %>" class="card-img-top" alt="<%= sauce.name %>" width="30">
                       <div class="card-body">
                         <h5 class="card-title">
                            <% const sauceName = sauce.name%>
                            <%= sauceName.toLowerCase()
                            .split(' ')
                            .map((s) => s.charAt(0).toUpperCase() + s.substring(1))
                            .join(' ')%>
                        </h5>
                         <a href="<%= sauce._id %>" class="btn btn-secondary">View Sauce</a>
                       </div>
                     </div>
                    
                     
                   <% }) %>
           
           </div>


           


      </div>
      <div class="col" style="width:10%">


        <h2>Add a hot sauce</h2>
            <div class="card" style="width: 100%;margin:10px;">
                <div class="card-body">
                    
                    <p>Can't see the sauce you're looking for?</p>
                    <a href="add" class="btn btn-primary">Add a hot sauce</a>
                  </div>
            </div>



            <h2>Recently added</h2>

            <div style="display:flex;flex-wrap: wrap;">
                <% mostRecentSauce.forEach(sauce => { %>

                <div class="card" style="width: 10rem;margin:10px;">
                    <img src="<%= sauce.image %>" class="card-img-top" alt="<%= sauce.name %>" width="30">
                    <div class="card-body">
                    <h5 class="card-title">
                      <% const sauceName = sauce.name%>
                      <%= sauceName.toLowerCase()
                      .split(' ')
                      .map((s) => s.charAt(0).toUpperCase() + s.substring(1))
                      .join(' ')%>
                    </h5>
                    <a href="<%= sauce._id %>" class="btn btn-secondary">View Sauce</a>
                    </div>
                </div>

                <% }) %>
            </div>



      </div>
    </div>
  </div>

       
        
      