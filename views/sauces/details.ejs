<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sofia+Sans+Condensed:wght@1;300;600;800&family=Sofia+Sans+Semi+Condensed:wght@200&display=swap" rel="stylesheet">
</head>

<div id="sauceSidebar">
    <img id="detailSauceIMG" src="<%= selectedSauce.image %>" width="300">
</div>

<div id="sauceInfo">
<h2 id="sauceTitle"><%= selectedSauce.name %></h2>
<p><span class="bold">Ingredients: </span><%= selectedSauce.ingredients %></p>
<p><span class="bold">Peppers: </span><%= selectedSauce.peppers %></p>
<p><span class="bold">Description: </span><%= selectedSauce.description %></p>
<p><span class="bold">Scoville: </span><%= selectedSauce.scoville %></p>
<p><span class="bold">Origin Country: </span><%= selectedSauce.originCountry.toUpperCase() %></p>
<p><span class="bold">Manufacturer: </span><%= selectedSauce.manufacturer %></p>
<p><span class="bold">Added By: </span>
    <img src="<%= selectedSauce.addedBy.avatar %>" width="20"> <%= selectedSauce.addedBy.username %></p>
    
<p><span class="bold"></span><a href="<%= selectedSauce.link %>" target="_blank">Buy This Sauce</a></p>
<a href="<%= selectedSauce._id %>/addReview"><button id="submitReviewButton">Leave a Review</button></a>


<% if (user.username === selectedSauce.addedBy.username) { %>
    <a href="/sauces/<%= selectedSauce._id %>/edit"><button id="submitReviewButton">EDIT SAUCE</button></a> 
    <a href="/sauces/<%= selectedSauce._id %>/delete"><button id="submitReviewButton">DELETE SAUCE</button></a> 
<% } %>

<hr>


</div>

<div id="sauceInfo">
<h2 id="reviewsHeader">Reviews</h2>
<% sauceReviews.forEach(review => { %>
<p><span class="bold">Reviewed By:</span> <img src="<%= review.addedBy.avatar %>" width="20"> <%= review.addedBy.username %></p>
<p><span class="bold">Rating:</span> <%= review.rating %></p>
<p><span class="bold">Spice Level: </span> <%= review.spiceLevel %></p>
<p><%= review.review %></p>
 
<% }) %>



<hr>
</div>

<h2 id="reviewsHeader">You might also like these...</h2>

<div id="sauceDisplayDetails" style="display:flex;flex-wrap: wrap;">
    <% randomSauces.forEach(sauce => { %>

    <div id="cardBody" class="card" style="width: 10rem;margin:10px;">
        <a href="<%= sauce._id %>"><img id="sauceImage" src="<%= sauce.image %>" class="card-img-top" alt="<%= sauce.name %>" width="30"></a>
        <div id="cardBody" class="card-body">
        <h5 id ="cardBody" class="card-title">
            <%=sauce.name%>
        </h5>
        </div>
    </div>

    <% }) %>
</div>
</div>